<UserControl x:Class="CardGames.UserControls.BlackJackPlayerDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardGames.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label x:Name="name" FontSize="10">Name</Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label FontSize="10">$</Label>
            <Label x:Name="bank" FontSize="10">20</Label>
        </StackPanel>
        <StackPanel x:Name="hand"></StackPanel>
    </Grid>
</UserControl>
