<UserControl x:Class="CardGames.UserControls.GoFishSetupMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardGames.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Button x:Name="NewGameButton" Content="New Game"
                Click="NewGameButton_Click"/>

        <Button x:Name="LoadGameButton" Content="Load Game"
                Click="LoadGameButton_Click"/>

        <ComboBox x:Name="PlayerComboBox" SelectionChanged="PlayerComboBox_SelectionChanged"
                  Visibility="Hidden">
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
        </ComboBox>
        <StackPanel x:Name="PlayerNameArea">
        </StackPanel>
        <Button x:Name="EnterButton" Content="Enter"
                Click="EnterButton_Click" Visibility="Hidden"/>
    </StackPanel>
</UserControl>
