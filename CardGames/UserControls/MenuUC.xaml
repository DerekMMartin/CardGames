<UserControl x:Class="CardGames.UserControls.MenuUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardGames.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Button x:Name="BlackJackButton" Content="Black Jack"
                Margin="50, 35, 50, 15"
                FontSize="25" Background="#05668D"
                Click="BlackJackButton_Click"
                BorderBrush="Black"
                BorderThickness="3px"/>

        <Button x:Name="GoFishButton" Content="Go Fish"
                Margin="50, 15, 50, 15"
                FontSize="25" Background="#05668D"
                Click="GoFishButton_Click"
                BorderBrush="Black"
                BorderThickness="3px"/>

        <Button x:Name="WarButton" Content="War"
                Margin="50, 15, 50, 15"
                FontSize="25" Background="#05668D"
                Click="WarButton_Click"
                BorderBrush="Black"
                BorderThickness="3px"/>
    </StackPanel>
</UserControl>
