<UserControl x:Class="CardGames.UserControls.GoFishGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardGames.UserControls">
    <Grid Height="350" Width="525">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label x:Name="TopHand" Grid.Column="1"
               Grid.Row="0"
               Content="ENEMY HAND"/>

        <Label x:Name="LeftHand" Grid.Column="0"
               Grid.Row="1"
               Content="ENEMY HAND"/>

        <Label x:Name="RightHand" Grid.Column="2"
               Grid.Row="1"
               Content="ENEMY HAND"/>

        <Label x:Name="BottomHand" Grid.Column="1"
               Grid.Row="2"
               Content="PLAYER HAND"/>
    </Grid>
</UserControl>
