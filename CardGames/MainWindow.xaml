<Window x:Class="CardGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGames"
        mc:Ignorable="d"
        Title="Card Games" Height="350" Width="525">
    <StackPanel Name="Root">
        <Button Name="BlackJackButton" Content="Black Jack"
                Margin="50, 35, 50, 15"
                FontSize="25"
                Click="BlackJackButton_Click"/>

        <Button Name="GoFishButton" Content="Go Fish"
                Margin="50, 15, 50, 15"
                FontSize="25"/>

        <Button Name="WarButton" Content="War"
                Margin="50, 15, 50, 15"
                FontSize="25"/>
        

    </StackPanel>
</Window>
